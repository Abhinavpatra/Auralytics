# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Twitter OAuth (for user authentication)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Twitter API (for verified users - optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Google Gemini AI
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# MongoDB Database (for storing user analysis data)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/auralytics?retryWrites=true&w=majority
MONGODB_DB_NAME=auralytics







# Analysis Configuration
MAX_TWEETS_ANALYSIS=100
USE_SCRAPING=true

# Email (for notifications - optional)
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-password
# EMAIL_FROM=noreply@your-domain.com
